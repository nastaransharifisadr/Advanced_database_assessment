<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Diamond Beauty</title>
    <link rel="stylesheet" href="style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@5.15.4/css/fontawesome.min.css" >
</head>

<body>


  <%- include('common/header'); %>

  <div class="container">
    <h1 class="text-center">Create A New booking </h1>
    <div class="row justify-content-md-center">
      <div class="col-">
        <form method="POST" action="/create-bookings">

          <div class="form-group">
            <label for="name">firstname</label>
            <input
              type="text"
              class="form-control"
              id="firstname"
              name="firstname"
            />
            <% if (errors['firstname']) { %>
            <p style="color: red"><%= errors['firstname'].message %></p>
            <% } %>
            </div>

            <div class="form-group">
            <label for="name">lastname</label>
            <input
              type="text"
              class="form-control"
              id="lastname"
              name="lastname"
            />
            <% if (errors['lastname']) { %>
                <p style="color: red"><%= errors['lastname'].message %></p>
            <% } %>
            </div>

            <div class="form-group">
            <label for="name">email</label>
            <input
                type="text"
                class="form-control"
                id="email"
                name="email"
            />
            <% if (errors['email']) { %>
            <p style="color: red"><%= errors['email'].message %></p>
            <% } %>
           </div>

           <div class="form-group">
            <label for="name">daterequest</label>
            <input
                type="date"
                class="form-control"
                id="daterequest"
                name="daterequest"
            />
            <% if (errors['daterequest']) { %>
            <p style="color: red"><%= errors['daterequest'].message %></p>
            <% } %>
           </div>

           <div class="form-group">
            <label for="exampleFormControlSelect1">Select service</label>
            <select
              class="form-control"
              name="services_id"
              id="exampleFormControlSelect1"
            >
              <% services.forEach( Services => { %>

              <option value="<%= services._id %>"><%= Services.name %></option>

              <% }) %>
            </select>
          </div>

          

        <% }) %>
          </div>


          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
  



   
   <%- include('common/footer'); %>
   

     
  
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>   
</body>
</html>